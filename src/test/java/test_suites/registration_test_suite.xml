<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Registration test suite">
    <parameter name="dataFile" value="src/test/data/data.json"/>

    <test name="Registration" verbose="2">
        <classes>

            <class name="best.HomeTest">
                <methods>
                    <include name="positiveHomePageTest" />
                </methods>
            </class>

            <class name="best.SignInTest">
                <methods>
                    <include name="signInTest" />
                </methods>
            </class>

            <class name="best.AccountCreationTest">
                <methods>
                    <include name="personalInfoTest" />
                </methods>
            </class>

        </classes>
    </test>

</suite>
